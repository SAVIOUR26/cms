# KandaNews Africa — Environment Configuration
# Copy this file to .env and fill in your values

# ── Application ──
APP_ENV=production
APP_DEBUG=false
APP_URL=https://kandanews.africa
API_URL=https://api.kandanews.africa

# ── Database (API) ──
DB_HOST=localhost
DB_NAME=kandan_api
DB_USER=kandan_api
DB_PASS=
DB_CHARSET=utf8mb4

# ── JWT Authentication ──
JWT_SECRET=CHANGE-ME-use-a-random-64-char-string
JWT_TTL=2592000
JWT_REFRESH_TTL=7776000

# ── SMS: Africa's Talking ──
AT_API_KEY=
AT_USERNAME=sandbox
AT_SENDER_ID=KandaNews

# ── Payments: Flutterwave ──
FW_PUBLIC_KEY=
FW_SECRET_KEY=
FW_WEBHOOK_HASH=

# ── Payments: DPO ──
DPO_COMPANY_TOKEN=
DPO_SERVICE_TYPE=

# ── Cron (protect HTTP-based cron calls) ──
CRON_KEY=generate-a-random-string-here

# ── Editions ──
EDITIONS_PATH=/home/kandan/domains/ug.kandanews.africa/public_html/editions
EDITIONS_URL=https://ug.kandanews.africa/editions
