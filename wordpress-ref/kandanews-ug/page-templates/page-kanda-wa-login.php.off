<main class="wa-login-wrap">
  <h1>Login with WhatsApp</h1>
  <form id="wa-login-form">
    <label for="wa-phone">WhatsApp number (Uganda):</label>
    <input id="wa-phone" type="tel" placeholder="+2567XXXXXXXX" required>

    <button id="wa-send" class="btn primary" type="button">Send Code on WhatsApp</button>

    <div id="code-wrap" style="display:none; margin-top:1rem;">
      <label for="wa-code">Enter code from WhatsApp:</label>
      <input id="wa-code" type="text" inputmode="numeric" maxlength="8" placeholder="123456">
      <button id="wa-verify" class="btn primary" type="button">Verify & Continue</button>
    </div>

    <div id="wa-msg"></div>
  </form>
</main>

<script>
(async function(){
  const byId = id => document.getElementById(id);
  const phoneEl  = byId('wa-phone');
  const sendBtn  = byId('wa-send');
  const codeWrap = byId('code-wrap');
  const codeEl   = byId('wa-code');
  const verifyBtn= byId('wa-verify');
  const msgEl    = byId('wa-msg');

  function say(txt){ msgEl.textContent = txt; }

  sendBtn.addEventListener('click', async () => {
    say('Sending code to WhatsApp…');
    try {
      const res = await fetch('/wp-json/kanda/auth/whatsapp/start', {
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body: JSON.stringify({ phone: phoneEl.value })
      });
      const data = await res.json();
      if(data.ok){
        say('Code sent. Check your WhatsApp and enter it below.');
        codeWrap.style.display = 'block';
        codeEl.focus();
      } else {
        say(data.error || 'Failed to send code');
      }
    } catch(err){
      say('Network error. Please try again.');
    }
  });

  verifyBtn.addEventListener('click', async () => {
    say('Verifying code…');
    try {
      const res = await fetch('/wp-json/kanda/auth/whatsapp/verify', {
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body: JSON.stringify({ phone: phoneEl.value, code: codeEl.value })
      });
      const data = await res.json();
      if(data.ok){
        say('Success. Redirecting…');
        window.location.href = data.redirect || '/';
      } else {
        say(data.error || 'Verification failed');
      }
    } catch(err){
      say('Network error. Please try again.');
    }
  });
})();
</script>

